<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.miaozi.baselibrary.views.SwipeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#F44336"
                android:text="删除"
                android:textColor="#fff" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#E91E63"
                android:text="删除"
                android:textColor="#fff" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/bt_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#009688"
            android:gravity="center">
            <TextView
                android:id="@+id/bt_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="菜单在两侧"
                android:textColor="#fff" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#9C27B0"
                android:text="删除"
                android:textColor="#fff" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#673AB7"
                android:text="删除"
                android:textColor="#fff" />
        </LinearLayout>
    </com.miaozi.baselibrary.views.SwipeLayout>
    <View
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <com.miaozi.baselibrary.views.SwipeLayout2
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#F44336"
                android:text="删除"
                android:textColor="#fff" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#E91E63"
                android:text="删除"
                android:textColor="#fff" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#9C27B0"
                android:text="删除"
                android:textColor="#fff" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#673AB7"
                android:text="删除"
                android:textColor="#fff" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#009688"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="菜单在底部"
                android:textColor="#fff" />
        </LinearLayout>
    </com.miaozi.baselibrary.views.SwipeLayout2>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/bt_1"
            android:text="侧滑布局在两侧"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/bt_2"
            android:layout_marginLeft="30dp"
            android:text="侧滑布局在底部"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>